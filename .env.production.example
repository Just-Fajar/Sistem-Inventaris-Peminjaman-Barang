APP_NAME="Sistem Inventaris"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.inventaris.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=inventaris_production
DB_USERNAME=inventaris_user
DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.inventaris.com

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Cache Configuration (Redis recommended for production)
CACHE_STORE=redis
CACHE_PREFIX=inventaris_

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@inventaris.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=inventaris-images
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=inventaris.com,www.inventaris.com
SANCTUM_TOKEN_EXPIRATION=null

# Frontend URL
FRONTEND_URL=https://inventaris.com

# Backup Configuration
BACKUP_ARCHIVE_PASSWORD=your_backup_password

# Sentry (Error Tracking - Optional)
# SENTRY_LARAVEL_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=10

VITE_APP_NAME="${APP_NAME}"
